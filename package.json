{
  "author": "ismay",
  "description": "Source for ismaywolff.nl",
  "name": "ismaywolff.nl",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production webpack --bail",
    "deploy": "surge --project ./dist --domain ismaywolff.nl",
    "start": "BABEL_ENV=development webpack-dev-server --content-base dist/",
    "test": "jest --watch",
    "test:eslint": "eslint 'src/**/*.{js,jsx}'",
    "test:jest": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com:ismay/ismaywolff.nl.git"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1": "^6.13.0",
    "clean-webpack-plugin": "^0.1.13",
    "css-loader": "^0.25.0",
    "cssnano": "^3.7.4",
    "dotenv": "^2.0.0",
    "enzyme": "^2.5.1",
    "enzyme-to-json": "^1.3.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "jest": "^16.0.2",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.3",
    "style-loader": "^0.13.1",
    "surge": "^0.18.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1",
    "webpack-merge": "^0.14.1",
    "webpack-validator": "^2.2.7"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "glamor": "^2.17.12",
    "react": "^15.3.2",
    "react-dom": "^15.3.1",
    "react-router": "next"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "moduleFileExtensions": [
      "json",
      "js",
      "jsx"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$"
  }
}
