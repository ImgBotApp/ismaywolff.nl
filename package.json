{
  "author": "ismay",
  "description": "Source for ismaywolff.nl",
  "name": "ismaywolff.nl",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production webpack -p --bail",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint client/**/*.{js,jsx}",
    "start": "webpack-dev-server --content-base dist/",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ismay/ismaywolff.nl.git"
  },
  "jest": {
    "collectCoverageFrom": [
      "client/**/*.{js,jsx}",
      "!client/index.jsx",
      "!client/{rootReducer,rootSaga,store}.js",
      "!client/{components,data,services}/*/index.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.11.15",
    "css-loader": "^0.26.0",
    "dotenv": "4.0.0",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.4.4",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-import-resolver-webpack": "0.8.1",
    "eslint-plugin-import": "^2.2.0",
