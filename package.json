{
  "author": "ismay",
  "description": "Source for ismaywolff.nl",
  "name": "ismaywolff.nl",
  "version": "1.0.0",
  "scripts": {
    "start": "webpack-dev-server --content-base dist/ --watch-poll",
    "test": "jest --watch",
    "build": "NODE_ENV=production webpack -p --bail",
    "deploy": "surge --project ./dist --domain ismaywolff.nl",
    "test:lint": "standard --fix",
    "test:unit": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ismay/ismaywolff.nl.git"
  },
  "standard": {
    "env": {
      "jest": true,
      "browser": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.0",
    "cssnano": "^3.8.1",
    "dotenv": "^2.0.0",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.1",
    "jest": "^17.0.3",
    "react-addons-test-utils": "^15.4.1",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "surge": "^0.18.0",
    "webpack": "2.1.0-beta.27",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "glamor": "^2.20.8",
    "react": "^15.4.1",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "react-router": "4.0.0-alpha.6"
  }
}
