{
  "author": "ismay",
  "description": "Source for ismaywolff.nl",
  "name": "ismaywolff.nl",
  "version": "1.0.0",
  "scripts": {
    "build:client": "bnr build:client",
    "build:server": "bnr build:server",
    "dev:client": "bnr dev:client",
    "dev:server": "bnr dev:server",
    "lint:css": "stylelint 'src/**/*.{js,jsx}'",
    "lint:js": "eslint 'src/**/*.{js,jsx}'",
    "lint:prettier": "prettier --list-different --print-width 100 --tab-width 2 --no-semi --single-quote 'src/**/*.{js,jsx}'",
    "lint:whitespace": "lintspaces -e ./.editorconfig -i 'js-comments' 'src/{client,server}/**/!(*.snap)*'",
    "precommit": "lint-staged",
    "start": "bnr start",
    "test": "jest --config .jestrc --watch",
    "test:coverage": "jest --config .jestrc --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "betterScripts": {
    "build:client": {
      "command": "webpack --config webpack.config.client.js -p --bail",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "client"
      }
    },
    "build:server": {
      "command": "webpack --config webpack.config.server.js --bail",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "server"
      }
    },
    "dev:client": {
      "command": "webpack-dev-server --config webpack.config.client.js --inline --hot",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "client"
      }
    },
    "dev:server": {
      "command": "babel-watch src/server/index.js",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "server"
      }
    },
    "start": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ismay/ismaywolff.nl.git"
  },
  "greenkeeper": {
    "ignore": [
      "eslint-plugin-import",
      "eslint-plugin-react",
      "eslint-plugin-jsx-a11y"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-react": "^6.16.0",
    "babel-watch": "^2.0.6",
    "better-npm-run": "^0.0.15",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.11.15",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-compat": "^1.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^19.0.2",
    "jest-serializer-enzyme": "^1.0.0",
    "lint-staged": "^3.4.0",
    "lintspaces-cli": "^0.6.0",
    "prettier": "^1.2.2",
    "react-test-renderer": "^15.5.4",
    "spdx-expression-parse": "^1.0.4",
    "style-loader": "^0.16.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-no-unsupported-browser-features": "^0.1.0",
    "stylelint-order": "^0.4.3",
    "stylelint-processor-styled-components": "^0.1.0",
    "webpack": "^2.3.0",
    "webpack-dev-server": "^2.2.1",
    "webpack-md5-hash": "^0.0.5",
    "webpack-node-externals": "^1.5.4",
    "webpack-stats-plugin": "^0.1.5"
  },
  "dependencies": {
    "dateformat": "^2.0.0",
    "history": "^4.6.1",
    "load-script": "^1.0.0",
    "normalize.css": "^6.0.0",
    "normalizr": "^3.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "react-loadable": "^3.2.2",
    "react-markdown": "^2.5.0",
    "react-measure": "^1.4.7",
    "react-medium-image-zoom": "^1.0.0",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "styled-components": "rc"
  }
}
