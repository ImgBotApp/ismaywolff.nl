    "isomorphic-fetch": "^2.2.1",
    "normalize.css": "^5.0.0",
    "normalizr": "^3.0.0",
    "react": "^15.4.1",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.2",
    "react-router-dom": "next",
