{
  "author": "ismay",
  "private": true,
  "license": "MIT",
  "description": "Source for ismaywolff.nl",
  "name": "ismaywolff.nl",
  "scripts": {
    "build:client": "bnr build:client",
    "build:server": "bnr build:server",
    "dev:client": "bnr dev:client",
    "dev:server": "bnr dev:server",
    "lint:css": "stylelint 'src/**/*.{js,jsx}'",
    "lint:js": "eslint 'src/**/*.{js,jsx}'",
    "lint:prettier": "prettier --list-different --print-width 100 --tab-width 2 --no-semi --single-quote 'src/**/*.{js,jsx}'",
    "lint:whitespace": "lintspaces -e ./.editorconfig -i 'js-comments' 'src/{client,shared,server}/**/!(*.snap)*'",
    "precommit": "lint-staged",
    "start": "bnr start",
    "test": "jest --watch",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-enzyme"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/{client,server,shared}/*.{js,jsx}",
      "!src/{client,server,shared}/{components,data,services}/*/index.js",
      "!src/client/services/{raven,analytics}/**",
      "!src/shared/services/{online,raven,persist}/**",
      "!src/server/templates/**",
      "!**/.eslintrc.js"
    ]
  },
  "betterScripts": {
    "build:client": {
      "command": "RELEASE=$(git rev-parse HEAD)-$(date +%s)-client webpack --config webpack.config.client.prod.js -p --bail",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "client"
      }
    },
    "build:server": {
      "command": "RELEASE=$(git rev-parse HEAD)-$(date +%s)-server webpack --config webpack.config.server.prod.js --bail",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "server"
      }
    },
    "dev:client": {
      "command": "webpack-dev-server --config webpack.config.client.dev.js --inline --hot",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "client"
      }
    },
    "dev:server": {
      "command": "babel-watch src/server/index.js",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "server"
      }
    },
    "start": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ismay/ismaywolff.nl.git"
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-import",
      "eslint-plugin-react",
      "eslint-plugin-jsx-a11y"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^1.0.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.16.0",
    "babel-watch": "^2.0.6",
    "better-npm-run": "^0.1.0",
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.11.15",
    "enzyme": "^2.8.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-compat": "^1.0.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "express": "^4.15.2",
    "html-minifier": "^3.5.2",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^21.1.0",
    "jest-serializer-enzyme": "^1.0.0",
    "jest-styled-components": "^4.3.0",
    "lint-staged": "^4.0.0",
    "lintspaces-cli": "^0.6.0",
    "nock": "^9.0.13",
    "offline-plugin": "^4.8.3",
    "prettier": "^1.5.3",
    "raven": "^2.0.0",
    "react-test-renderer": "^15.5.4",
    "redux-mock-store": "^1.2.3",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "stylelint-order": "^0.6.0",
    "stylelint-processor-styled-components": "^1.0.0",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "webpack-node-externals": "^1.5.4",
    "webpack-sentry-plugin": "^1.9.2",
    "webpack-stats-plugin": "^0.1.5"
  },
  "dependencies": {
    "dateformat": "^3.0.2",
    "debounce": "^1.0.2",
    "history": "^4.6.2",
    "load-script": "^1.0.0",
    "normalizr": "^3.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.0.3",
    "react-lazy-load": "^3.0.12",
    "react-medium-image-zoom": "^1.0.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.1.2"
  }
}
