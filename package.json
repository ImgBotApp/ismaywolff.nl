    "jest": "^18.0.0",
    "react-addons-test-utils": "^15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.1"
